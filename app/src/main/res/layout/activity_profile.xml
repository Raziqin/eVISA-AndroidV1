<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uksbraziq.latlong.profile"
   >

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/klcc_bg"
        android:scaleType="fitXY"

        android:alpha=".80"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:alpha=".90"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/evisa" />

    <ImageView
        android:layout_gravity="center_horizontal"
        android:paddingTop="0px"
        android:paddingBottom="5px"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:src="@android:drawable/divider_horizontal_bright"
        android:background="#000000"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, "
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="italic"
        android:id="@+id/textView2"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/hifname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="15dp"
        android:layout_marginLeft="1dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIST OF"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/list_item"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APPLICATION"
        android:textColor="#ffff00"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="6dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <ImageView
        android:layout_gravity="center_horizontal"
        android:paddingTop="0px"
        android:paddingBottom="5px"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:src="@android:drawable/divider_horizontal_bright"
        android:background="#000000"
        android:layout_above="@+id/hifname"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="10dp"
        android:alpha=".70"
        app:srcCompat="@drawable/wmalaysiamy"
        android:background="#ffffff"/>

    <ListView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:background="@color/colorListview2"
        android:layout_centerHorizontal="true"
        android:divider="#213a63"
        android:dividerHeight="3dp"
        android:text="   "
        android:alpha=".95"
        android:layout_gravity="center"
        android:listSelector="#848587"
        android:gravity="center"
        android:foregroundGravity="center"
        android:textAlignment="center"/>




</RelativeLayout>
